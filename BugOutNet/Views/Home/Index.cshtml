@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="Description" content="Justin LeCheminant Senior Software Engineer. Showcasing projects, blog, resume, contact info" />
    <META NAME="ROBOTS" CONTENT="INDEX, NOFOLLOW">
    <link href="@Url.Content("~/Content/bootstrap.css")" type="text/css" rel="stylesheet" />
    <link href="@Url.Content("~/Content/bootstrap-theme.min.css")" type="text/css" rel="stylesheet" />
    <link rel="stylesheet" href="@Url.Content("~/Content/jquery.jqGrid/ui.jqgrid.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Content/themes/base/all.css")">
    <script type="text/javascript" src="@Url.Content("~/scripts/jquery-3.1.0.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/scripts/jquery.jqGrid.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/scripts/bootstrap.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/scripts/modernizr-2.8.3.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/scripts/i18n/grid.locale-en.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/scripts/jquery.unobtrusive-ajax.min.js")"></script>
    <link rel="icon" type="image/png" href="@Url.Content("~/favicon.ico")" />
    <title>BugOutNet Login</title>
    <style type="text/css">
        .center-block {
            font-family: Arial, Georgia, serif;
            width: 300px;
            height: 250px;
            padding: 10px;
            background-color: #eceadc;
            color: #ec8007;
            border: 1px solid grey;
            position: absolute;
            top: 0;
            left: 0;
            bottom: 0;
            right: 0;
            margin: auto;
        }
    </style> 
</head>
<body>
    <div class="navbar navbar-inverse navbar-static-top">
        <div class="container">
            <div class="navbar-header">
                <span class="navbar-brand">BugOutNet</span>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="center-block">
                @using( Ajax.BeginForm( "PerformLogin", "Login", new AjaxOptions() { OnFailure= "onFailure", OnSuccess= "onSuccess" }  ) )
                {
                    <span id="spanError" style="color: red;"></span>
                    <fieldset>
                        <legend>Please Login</legend>
                        <input class="form-control" type="text" placeholder="username" id="textUsername" name="textUsername" required="required" maxlength="25" />
                        <input class="form-control" type="password" placeholder="password" id="textPassword" name="textPassword" required="required" maxlength="50" />
                        <label class="form-control">
                            Remember Me:&nbsp;<input type="checkbox" id="cbRemember" name="cbRemember" checked="checked" />
                        </label>
                        <input class="form-control btn btn-primary" type="submit" value="Login" data-loading-text="<i class='icon-spinner icon-spin icon-large'></i> Attempting Login" />
                    </fieldset>
                }
            </div>
        </div>
    </div> 
</body>
</html>

<script>
    function onFailure(data) {
        alert(data.ErrorMessage);
    }

    function onSuccess(data) {
        if (data.Success){
            $("#spanError").html("");        
            window.location = "@Url.Action( "Index", "Bugs" )";
        }
        else {
            $("#spanError").html("Invalid username/password");
        }
        
    }
</script>