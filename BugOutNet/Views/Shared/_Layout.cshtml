@using BugOutNetLibrary.Managers

<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title - BugOutNet</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="Description" content="Justin LeCheminant Senior Software Engineer. Showcasing projects, blog, resume, contact info" />
    <META NAME="ROBOTS" CONTENT="INDEX, NOFOLLOW">
    <link href="@Url.Content( "~/Content/bootstrap.css" )" type="text/css" rel="stylesheet" />
    <link href="@Url.Content( "~/Content/bootstrap-theme.min.css" )" type="text/css" rel="stylesheet" />
    
    @*This is standard uncomment for standard grid theme*@
    @*<link rel="stylesheet" href="@Url.Content( "~/Content/themes/base/jquery-ui.min.css" )" />*@

    @*These 3 are custom and can be switch out for a different theme or commented out for standard*@
    <link rel="stylesheet" href="@Url.Content( "~/Content/themes/BlackTile/jquery-ui.min.css" )" />
    <link rel="stylesheet" href="@Url.Content( "~/Content/themes/BlackTile/jquery-ui.structure.min.css" )" />
    <link rel="stylesheet" href="@Url.Content( "~/Content/themes/BlackTile/jquery-ui.theme.min.css" )" />

    @*this is required don't change*@
    <link rel="stylesheet" href="@Url.Content( "~/Content/jquery.jqGrid/ui.jqgrid.css" )" />

    @*this is required don't change*@
    <script type="text/javascript" src="@Url.Content( "~/scripts/jquery-3.1.0.min.js" )"></script>
    
    @*This is standard, un comment for standard grid themes*@
    @*<script type="text/javascript" src="@Url.Content( "~/scripts/jquery-ui-1.12.0.min.js" )"></script>*@
    
    @*This 1 is custom and can be switch out for a different theme or commented out for standard*@
    <script type="text/javascript" src="@Url.Content( "~/Content/themes/BlackTile/jquery-ui.min.js" )"></script>

    <script type="text/javascript" src="@Url.Content( "~/scripts/i18n/grid.locale-en.js" )"></script>
    <script type="text/javascript" src="@Url.Content( "~/scripts/jquery.jqGrid.min.js" )"></script>
    <script type="text/javascript" src="@Url.Content( "~/scripts/jquery.unobtrusive-ajax.min.js" )"></script>
    <script type="text/javascript" src="@Url.Content( "~/scripts/modernizr-2.8.3.js" )"></script>

    <script type="text/javascript" src="@Url.Content( "~/scripts/bootstrap.min.js" )"></script>
    
    <link rel="icon" type="image/png" href="@Url.Content( "~/favicon.ico" )" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-static-top">
        <div class="container">
            <div class="navbar-header">
                <span class="navbar-brand" style="font-weight:bolder">BugOutNet</span>
            </div>
            <ul class="nav navbar-nav">
                <li><a href="@Url.Action( "Index", "Bugs" )">Bugs</a></li>
                <li><a href="@Url.Action( "Index", "Search" )">Search</a></li>
                <li><a href="@Url.Action( "Index", "Reports" )">Reports</a></li>
                
                @{ if( SessionManager.User.IsAdmin )
                    {
                    <li><a href="@Url.Action( "Index", "Admin" )">Admin</a></li>
                        }
                    }
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#"><img src="http://justin-lecheminant.com/favicon.png" style="width: 20px; height: 20px; border: none;" /><span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a href="#">Profile</a></li>
                        <li><a href="#">Settings</a></li>
                        <li><a href="@Url.Action("Logoff","Login")">Logoff</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>
    <div id="footer">
        <div class="container text-center" style="padding: 20px;">
            <p class="text-muted">
                &copy; @DateTime.Now.Year - Justin LeCheminant(BugOutNet)
            </p>
        </div>
    </div>
</body>
</html>
